<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/tvNoteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:textSize="@dimen/medium_text_size"
        tools:text="Note Title" />

    <TextView
        android:id="@+id/tvNoteCreatedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginBottom="@dimen/medium_margin"
        android:textSize="@dimen/small_text_size"
        tools:text="26.02.2022" />

    <ImageView
        android:id="@+id/ivDeleteNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginEnd="@dimen/big_margin"
        android:contentDescription="@string/recycler_view_note_iv_delete_note_content_description"
        android:src="@drawable/ic_delete_note" />

</FrameLayout>